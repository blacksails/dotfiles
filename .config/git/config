# vi: ft=gitconfig
[core]
  excludesfile = ~/.config/git/ignore
[branch]
    sort = -committerdate
[column]
    branch = always
[tag]
    sort = -v:refname
[versionsort]
    suffix = -
[user]
  name = Benjamin NÃ¸rgaard
  email = mail@blacksails.dev
[merge]
  tool = vimdiff
[mergetool]
  prompt = false
  keepbackup = false
[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[difftool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE
[alias]
  rb = "!f() { \
    set -e; \
    REMOTE="${1:-upstream}"; \
    MAIN_BRANCH="${2:-main}"; \
    HEAD_BRANCH=$(git rev-parse --abbrev-ref HEAD); \
    echo \"$HEAD_BRANCH\"; \
    git checkout \"${MAIN_BRANCH}\"; \
    git pull \"${REMOTE}\" \"${MAIN_BRANCH}\"; \
    git checkout \"${HEAD_BRANCH}\"; \
    git rebase -i \"${MAIN_BRANCH}\"; \
    }; f"
  d = difftool
  m = mergetool
[push]
  default = current
[hub]
  protocol = https
[pull]
  rebase = false
[init]
  defaultBranch = main
[credential "https://github.com"]
	helper =
	helper = !/opt/homebrew/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper =
    helper = !/opt/homebrew/bin/gh auth git-credential

