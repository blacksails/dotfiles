# vi: ft=gitconfig
[core]
  excludesfile = ~/.config/git/ignore
[branch]
    sort = -committerdate
[column]
    branch = always
[tag]
    sort = -v:refname
[versionsort]
    suffix = -
[user]
  name = Benjamin NÃ¸rgaard
  email = mail@blacksails.dev
[merge]
  tool = vimdiff
[mergetool]
  prompt = false
  keepbackup = false
[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[difftool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE
[alias]
  rb = "!f() { \
    set -e; \
    UPSTREAM=$1; \
    BRANCH=$(git rev-parse --abbrev-ref HEAD); \
    echo \"$BRANCH\"; \
    git checkout \"${UPSTREAM}\"; \
    git pull upstream \"${UPSTREAM}\"; \
    git checkout \"${BRANCH}\"; \
    git rebase -i \"${UPSTREAM}\"; \
    }; f"
  d = difftool
  m = mergetool
[push]
  default = current
[hub]
  protocol = https
[pull]
  rebase = false
[init]
  defaultBranch = main
[gpg]
  program = /opt/homebrew/bin/gpg
[credential "https://github.com"]
	helper =
	helper = !/opt/homebrew/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper =
    helper = !/opt/homebrew/bin/gh auth git-credential

