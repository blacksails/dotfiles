[merge]
  tool = vimdiff
[mergetool]
  prompt = false
  keepbackup = false
[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[difftool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE
[commit]
  gpgsign = true
[alias]
  rb = "!f() { \
    set -e; \
    UPSTREAM=$1; \
    BRANCH=$(git rev-parse --abbrev-ref HEAD); \
    echo \"$BRANCH\"; \
    git checkout \"${UPSTREAM}\"; \
    git pull upstream \"${UPSTREAM}\"; \
    git checkout \"${BRANCH}\"; \
    git rebase -i \"${UPSTREAM}\"; \
    }; f"
  d = difftool
  m = mergetool
[push]
  default = current
